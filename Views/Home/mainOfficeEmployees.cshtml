
@{
    ViewBag.Title = "AABC Corporation Staff";
    string[] staff = { "Fred Flinstone", "Barney Rubble", "Bettty Ruble", "Wilma Flintstone" };
    int staggLen = staff.Length;
    string[] managers = { "Pebbles Flinstone", "Johnny Quest", "Shaggy Rogers" };
    int managerLen = managers.Length;
    string[] officers = { "Scooby Doo", "Astro Jetson", "Scrappy Doo" };
    int officerLen = officers.Length;
    var x = 0;
}
<hr />
<img src="~/Content/detective.png" alt="xzy detectives" style="float:right;width:200px;outline:5px solid black; outline-offset:10px;" />

<h2> XYZ Detective Agency Staff</h2>
@for (int i = 0; i < staggLen; i++)
{
    <p>@staff[i]</p>
}
<hr />

<h2> XYZ Detective Agency Managers</h2>
@foreach (var person in managers)
{
    <p>@person</p>
}

<h2>XYZ Detective Agency Corporate Office</h2>
@{ 
    x = 0;
    while(x < officerLen)
    {
        <p>@officers[x]</p>
        x += 1;
    }
}
<hr/>
